<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/activeView"
            android:name="com.patrickbanez.workoutapp.HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="681dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/homeButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:onClick="swapFragment"
                android:text="@string/home_button"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/workoutButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:onClick="swapFragment"
                android:text="@string/workout_button"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/trackingButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:onClick="swapFragment"
                android:text="@string/tracking_button"
                tools:ignore="UsingOnClickInXml" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>